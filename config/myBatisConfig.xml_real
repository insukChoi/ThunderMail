        </environment>
    </environments>

    <!-- sql 맵퍼 -->
    <mappers>
        <mapper resource="com/mail/sql/TAXBILL_SQL.xml"/>
        <mapper resource="com/mail/sql/THUNDER_SQL.xml"/>
    </mappers>
 
</configuration>